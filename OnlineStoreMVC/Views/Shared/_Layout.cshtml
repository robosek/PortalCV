<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.bootstrap.js"></script>
    <!-- Bootstrap -->
    <link href='http://fonts.googleapis.com/css?family=Special+Elite' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Alegreya+Sans&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <style>
        * {
            margin: 0;
        }

        html, body {
            height: 100%;
        }

        .wrapper {
            min-height: 100%;
            height: auto !important;
            height: 100%;
            margin: 0 auto -4em;
        }

        .footer, .push {
            height: 6em;
        }

        #Main {
            background-color: white;
            background-image: none;
        }
        #NoVideo {
            display: none;
        }

    </style>

    @Styles.Render("~/Content/Site.css")

    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/navbar.css")
    @Styles.Render("~/Content/Slider.css")
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">


    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/
    html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/
    respond.min.js"></script>
    <![endif]-->
</head>
<body id="@(ViewData["PageID"]??"")">
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">

                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Northwind Traders", "Index", "Home", null, new { @class = "navbar-brand", @style = "padding-top:27px;" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="height: 70px; padding-top: 10px;">@Html.ActionLink("Strona główna", "Index", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li style="height: 70px; padding-top: 10px;">@Html.ActionLink("Kandydaci", "Browse", "CV")</li>
                    }
                    <li style="height: 70px; padding-top: 10px;">@Html.ActionLink("Kontakt", "Index", "Home")</li>



                </ul>
                @Html.Partial("_BackendMenuPartial")
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div id="@(ViewData["Video"]??"NoVideo")">

        @{ Html.RenderAction("_Video", "Home");}
        <script>

            $(document).ready(function () {

                $("body").addClass("anotherBody");
                $(".player").mb_YTPlayer();

            });
        </script>
    </div>




    <div class="container body-content wrapper">
        @RenderBody()
        <br />
        <hr />
    </div>

    <div class="footer" style="text-align:center; background-color: #a9a9a9; width: 100%; margin-bottom: 0px; border-radius: 5px; font-size: 18px; color: white; vertical-align: central; ">
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </div>


    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)

</body>

</html>