@using (Html.BeginForm("Search", "Search", FormMethod.Post, new { @class = "navbar-form navbar-left", role = "search",@style="padding-top:10px;" }))
{

    
    <div class="form-group">
        @Html.TextBox("searchquery", "", new { Name="query", @id = "query", @class = "form-control input-sm", placeholder = "Znajdź na stronie" })
        @Html.Hidden("fromcontroller", @ViewContext.RouteData.Values["controller"], new { @id = "fromcontroller" })
       
    </div>
    <button type="submit" class="btn btn-default" style="padding: 4px 12px">Szukaj</button>
     

}
