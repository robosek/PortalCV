@model List<OnlineStoreMVC.Models.UserViewModel>
<div class="container">
    <div class="col-md-12">

        <div class="well-none">
            <div id="myCarousel" class="carousel slide">

                <!-- Carousel items -->
                <div class="carousel-inner">
                    @if (!ViewBag.Many)
                    {
                        <div class="item active">

                            <div class="row">
                                @foreach (var item in Model)
                                {
                                   
                                    <div class="col-sm-3 col-xs-6">
                                        @if (System.IO.File.Exists(Server.MapPath("/Content/Uploads/Users/min_" + item.Nickname + ".jpg")))
                                        {
                                        <img src="@Url.Content("~/Content/Uploads/Users/min_"+item.Nickname+".jpg")" alt="@item.Name @item.Surname" width="250" height="250" class="img-rounded img-responsive" />
                                            
                                        }
                                        else
                                        {
                                          <img src="@Url.Content("~/Content/Uploads/Users/unknown.png")" alt="@item.Name @item.Surname" width="250" height="250" class="img-rounded img-responsive"/>
                                            
                                        }    

                                        <h3 style="text-align:center">@item.Nickname</h3>
                                    </div>
                                }

                            </div>

                            <!--/row-->
                        </div>
                    }
                    else
                    {
                        <div class="item active">
                            <div class="row">
                                @foreach (var item in Model.GetRange(0, 4))
                                {

                                    <div class="col-sm-3 col-xs-6">

                                        @if (System.IO.File.Exists(Server.MapPath("/Content/Uploads/Users/min_" + item.Nickname + ".jpg")))
                                        {
                                            <img src="@Url.Content("~/Content/Uploads/Users/" + "min_"+item.Nickname+".jpg")" alt="@item.Name@item.Surname" width="250" height="250" class="img-rounded img-responsive" />

                                        }
                                        else
                                        {
                                            <img src="@Url.Content("~/Content/Uploads/Users/unknown.png")" alt="@item.Name@item.Surname" width="250" height="250" class="img-rounded img-responsive" />

                                        }    
                                        <h3 style="text-align:center">@item.Nickname</h3>
                                    </div>

                                }

                            </div>

                            <!--/row-->
                        </div>

                                int counter = 0;

                                for (int i = 4; i < Model.Count; i++)
                                {
                                    

                                    if (counter == 0) { @Html.Raw("<div class=\"item\"><div class=\"row\">")
                                    }
                                    
                                                                                                            
                                    <div class="col-sm-3 col-xs-6">
                                            
                                        @if (System.IO.File.Exists(Server.MapPath("/Content/Uploads/Users/min_" + Model[i].Nickname + ".jpg")))
                                        { 
                                            <img src="@Url.Content("~/Content/Uploads/Users/" + "min_" + Model[i].Nickname + ".jpg")" alt="@Model[i].Name @Model[i].Surname" width="250" height="250" class="img-rounded img-responsive" />

                                        }
                                        else
                                        {
                                            <img src="@Url.Content("~/Content/Uploads/Users/unknown.png")" alt="@Model[i].Name @Model[i].Surname" width="250" height="250" class="img-rounded img-responsive" />

                                        }    
                                        <h3 style="text-align:center">@Model[i].Nickname</h3>
                                    </div>
                                       
                                     counter++;

                                    if (counter == 4|| i == Model.Count-1)
                                    {
                                        @Html.Raw("</div></div>")
                                        counter = 0;

                                        
                                    }



                                }

                    }
                </div>

                <!--/carousel-inner-->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev"><i class="fa fa-chevron-left"></i></a>

                <a class="right carousel-control" href="#myCarousel" data-slide="next"><i class="fa fa-chevron-right"></i></a>
            </div>
            <!--/myCarousel-->
        </div>
        <!--/well-->
    </div>
</div>